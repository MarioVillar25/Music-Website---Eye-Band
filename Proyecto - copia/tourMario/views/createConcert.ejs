<!DOCTYPE html>
<html>
  <head>
    <title>createConcert</title>
    <%- include('linkBootstrap') %>
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>
    <%- include('navbar') %>
    <h1>Create Concert </h1>


    <div class="d-flex justify-content-center">
      <form class="form-create"
      action="/concerts/createConcert/<%= band_id %> " 
      method="post"
      enctype="multipart/form-data"
      
      >
        <div>
          <label for="">City</label>
          <input type="text" name="city" />
        </div>
        <div>
          <label for="">address</label>
          <input type="text" name="address" />
        </div>

        <div>
          <label for="">date</label>
          <input type="date" name="date" />
        </div>

        <div>
          <label for="">schedule</label>
          <input type="time" name="schedule" />
        </div>
     

        <div>
          <label for="concert_img" class="btn btn-primary">+ Add Image</label>
          <input 
          type="file" 
          name="img" 
          id="concert_img"
          hidden
          />
        </div>

        <h4><%= typeof message != 'undefined' ? message: null %></h4>



        <button>aceptar</button>
        <button type="button"><a href="/bands/oneBand/<%= band_id %>">cancelar </a></button>
        <button type="reset">reset</button>
      </form>
    </div>

    <%- include('scriptBootstrap') %>
  </body>
</html>
